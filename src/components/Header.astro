---
type Props = {
  eyebrow?: string;
  title: string;
  description?: string;
  accent?: "sncf" | "forest";
  children?: any;
};

const { eyebrow, title, description, accent = "sncf" } = Astro.props as Props;
---

<section class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8" data-reveal>
  {eyebrow && (
    <p
      class={`text-xs uppercase tracking-[0.4em] ${
        accent === "forest" ? "text-forest" : "text-sncf"
      }`}
    >
      {eyebrow}
    </p>
  )}
  <h1 class="mt-4 text-3xl font-semibold sm:text-4xl lg:text-5xl">{title}</h1>
  {description && (
    <p class="mt-6 text-lg text-slate/80">
      {description}
    </p>
  )}
  <div class="mt-8 flex flex-wrap gap-4">
    <slot />
  </div>
</section>
