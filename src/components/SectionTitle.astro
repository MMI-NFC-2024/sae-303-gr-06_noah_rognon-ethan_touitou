---
type Props = {
  eyebrow?: string;
  title: string;
  description?: string;
  align?: "left" | "center";
};

const { eyebrow, title, description, align = "left" } = Astro.props as Props;
---

<div
  class={`mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 ${align === "center" ? "text-center" : "text-left"}`}
  data-reveal
>
  {eyebrow && (
    <p class="text-xs uppercase tracking-[0.4em] text-sncf">{eyebrow}</p>
  )}
  <h2 class="mt-4 text-3xl font-semibold sm:text-4xl">{title}</h2>
  {description && <p class="mt-4 text-base text-slate/80">{description}</p>}
</div>
